<Window x:Name="AboutWindow" x:Class="WMPv2.AboutWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AboutWin" Height="300" Width="400">
	<Window.Resources>
		<ControlTemplate x:Key="WMPButtonTemp" TargetType="{x:Type Button}">
			<Border BorderBrush="#FF1B1B1B" BorderThickness="2" Height="22" Margin="0" CornerRadius="2" Width="65">
				<Grid Height="22" Width="65" Background="#FF232323" Margin="0"/>
			</Border>
		</ControlTemplate>
	</Window.Resources>
    <Grid x:Name="AboutGrid" Background="#FF212121">
        <TextBlock />
        <Image
    Width="240" HorizontalAlignment="Center" Margin="0,0,0,40" Height="90"
            Source="Images\Epitech.png" VerticalAlignment="Bottom"/>
        <Button Content="Close" HorizontalAlignment="Center" VerticalAlignment="Bottom" Width="75" Margin="0,0,0,10" Background="#FF252525" BorderBrush="#FF2D2D2D" Foreground="#FF5C5C5C"/>
        <Button Content="Button" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Template="{DynamicResource WMPButtonTemp}"/>
    </Grid>
</Window>
